<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.MainPage"
             Background="#F5F5F5">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About"
                     Clicked="About"
                     Order="Primary"
                     Priority="0"/>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="*,*,*" Padding="30">
        <!-- Title section -->
        <VerticalStackLayout Grid.Row="0" 
                             VerticalOptions="End"
                             HorizontalOptions="Center"
                             Spacing="10">
            <Label Text="????"
                   FontSize="64"
                   HorizontalTextAlignment="Center" />
            <Label Text="IdeaPickerPro"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#333"/>
            <Label Text="Keep track of your brilliant ideas" 
                   FontSize="16"
                   TextColor="#666"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
        
        <!-- Nav buttons -->
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="15"
                             WidthRequest="280">
            
           <Button Text="+ Add New Idea"
                   FontSize="18"
                   BackgroundColor="#4CAF50"
                   TextColor="White"
                   CornerRadius="20"
                   HeightRequest="60" />
           <Button Text="View All Ideas"
                   FontSize="18"
                   BackgroundColor="#2196F3"
                   TextColor="White"
                   CornerRadius="12"
                   HeightRequest="60" />
            
        </VerticalStackLayout>
        
        <!-- ???Footer -->
        <Label Grid.Row="2"
               Text="v0.1.1"
               FontSize="12"
               TextColor="#999"
               VerticalOptions="End"
               HorizontalOptions="Center"/>
    </Grid>
</ContentPage>