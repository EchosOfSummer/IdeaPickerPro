<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.MainPage"
             Title="Welcome!!">
             
             <!-- BackgroundColor="Black"> -->
    <!-- -->
    <!-- <ContentPage.ToolbarItems> -->
    <!--     <ToolbarItem Text="About" -->
    <!--                  Clicked="About" -->
    <!--                  Order="Primary" -->
    <!--                  Priority="0"/> -->
    <!-- </ContentPage.ToolbarItems> -->
    <Grid>
        <BoxView BackgroundColor="DarkBlue" />
        <!-- Overlay for glitch effect -->
        <BoxView x:Name="Layer1" BackgroundColor="DarkCyan" Opacity="0" />
        <BoxView x:Name="Layer2" BackgroundColor="Red" Opacity="0" />
        <BoxView x:Name="Layer3" BackgroundColor="LightCyan" Opacity="0" />
        <BoxView x:Name="Layer4" BackgroundColor="Pink" Opacity="0" />
        
        <Grid RowDefinitions="Auto,*">
            <!-- Header with rounded corners -->
            <Frame Grid.Row="0"
                   Style="{StaticResource PageHeaderStyle}"
                   HeightRequest="120">
                <Grid Padding="20,20,20,20">
                    <Label Text="Idea Picker"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="GreenYellow"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </Frame>
            
            <!-- Content box with infon -->
            <Frame Grid.Row="1"
                   Style="{StaticResource ContentBoxStyle}">
                <VerticalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label Text="Welcome to Idea Picker Pro!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="GreenYellow"
                           HorizontalOptions="Center" />
                    <Label Text="Where do you want to go?"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="GreenYellow"
                           TextDecorations="Underline"
                           HorizontalOptions="Center" />
                    <Button Text="Pick Random Idea" 
                            Clicked="btnRandomIdea"
                            HeightRequest="60"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="GreenYellow"
                            BackgroundColor="green"
                            CornerRadius="12" />
                    <Label x:Name="lblRandIdea"
                           Text=""
                           FontSize="20"
                           TextColor="GreenYellow"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>

