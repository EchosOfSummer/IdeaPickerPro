<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.MainPage"
             Background="#F5F5F5">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About"
                     Clicked="About"
                     Order="Primary"
                     Priority="0"/>
    </ContentPage.ToolbarItems>
       
       <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        
              <Label Text="Welcome to Idea Picker Pro!"
                     FontSize="24"
                     FontAttributes="Bold"
                     HorizontalOptions="Center"/>
              <Label Text="Where do you want to go?"
                     FontSize="18"
                     HorizontalOptions="Center"/>
        
              <Button Text="Pick Random Idea"
                
                      HeightRequest="60"
                      FontSize="18"
                      BackgroundColor="#FF9800"
                      CornerRadius="12"/>
        
              <Label x:Name="lblRandIdea"
                     Text=""
                     FontSize="20"
                     FontAttributes="Bold"
                     HorizontalOptions="Center"
                     TextColor="#9C27BB"/>
       </VerticalStackLayout>
</ContentPage>