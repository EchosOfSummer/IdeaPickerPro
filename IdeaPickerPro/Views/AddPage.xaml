<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.AddPage"
             Title="Add Idea">
   <Grid>
       <BoxView BackgroundColor="#0a0a0a" />
       <!-- Overlay for glitch effect -->
       <BoxView x:Name="Layer1" BackgroundColor="#000000" Opacity="0" />
       <BoxView x:Name="Layer2" BackgroundColor="#cc0000" Opacity="0" />
       <BoxView x:Name="Layer3" BackgroundColor="#000000" Opacity="0" />
       <BoxView x:Name="Layer4" BackgroundColor="#ff0066" Opacity="0" />
       
       
       <Grid RowDefinitions="Auto,*">
           <!-- Header with rounded corners -->
           <Frame Grid.Row="0"
                  Style="{StaticResource PageHeaderStyle}"
                  HeightRequest="120">
               <Grid Padding="20,20,20,20">
                   <Label Text="Idea Picker"
                          FontSize="24"
                          FontAttributes="Bold"
                          TextColor="HotPink"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
               </Grid>
           </Frame>
            
           <!-- Content box with infon -->
           <Frame Grid.Row="1"
                  Style="{StaticResource ContentBoxStyle}">
               <VerticalStackLayout Spacing="15" VerticalOptions="Center">
                   <Label Text="What brilliant thought do you have?"
                          FontSize="22"
                          FontAttributes="Bold"
                          TextColor="HotPink"
                          HorizontalOptions="Center" />
                   <Frame BackgroundColor="White"
                          CornerRadius="12"
                          Padding="15"
                          HasShadow="True">
                       <Grid>
                           <Entry x:Name="txtIdea"
                                  Placeholder="Type your idea here..."
                                  PlaceholderColor="HotPink"
                                  FontSize="16"/>
                       </Grid>
                   </Frame>
                   
                   <!-- button stuff -->
                   <Button Text="Save Idea" 
                           x:Name="btnSave"
                           FontSize="16"
                           FontAttributes="Bold"
                           BackgroundColor="Green"
                           TextColor="Blue"
                           CornerRadius="12"
                           HeightRequest="55"
                           Clicked="BtnSave_OnClicked"/>
                   <Button Text="Clear"
                           x:Name="btnClear"
                           FontSize="16"
                           BackgroundColor="Transparent"
                           TextColor="Blue"
                           BorderColor="#ccc"
                           BorderWidth="1" 
                           CornerRadius="12"
                           HeightRequest="45"
                           Clicked="BtnClear_OnClicked"/>
               </VerticalStackLayout>
           </Frame>
       </Grid>
   </Grid>
