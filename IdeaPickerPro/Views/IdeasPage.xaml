<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.IdeasPage"
             Title="My Ideas..."
             BackgroundColor="#F5F5F5 ">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="15">
           <!-- header -->>
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label Text="My Ideas"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#333"/>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="All Your Brilliant Thoughts!!"
                                  FontSize="14"
                                  TextColor="#666"/>
                            <Span Text="haha..."
                                  FontSize="10"
                                  TextColor="#999"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        <Button Grid.Row="1"
                Text="Convert to Number"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>