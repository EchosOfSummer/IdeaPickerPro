<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerPro.Views.IdeasPage"
             Title="My Ideas">
    
    <Grid>
        <BoxView BackgroundColor="#0a0a0a" />
        <!-- Overlay for glitch effect -->
        <BoxView x:Name="Layer1" BackgroundColor="#000000" Opacity="0" />
        <BoxView x:Name="Layer2" BackgroundColor="#cc0000" Opacity="0" />
        <BoxView x:Name="Layer3" BackgroundColor="#000000" Opacity="0" />
        <BoxView x:Name="Layer4" BackgroundColor="#ff0066" Opacity="0" />
        
        <Grid RowDefinitions="Auto,*">
           <!-- Header with rounded corners -->
           <Frame Grid.Row="0"
                  Style="{StaticResource PageHeaderStyle}"
                  HeightRequest="120">
               <Grid Padding="20,20,20,20">
                   <Label Text="All Ideas"
                          FontSize="24"
                          FontAttributes="Bold"
                          TextColor="HotPink"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
               </Grid>
           </Frame>
            
           <!-- Content box with infon -->
           <Frame Grid.Row="1"
                  Style="{StaticResource ContentBoxStyle}"
                  Padding="10">
               <Grid>
                   <CollectionView x:Name="IdeasCollectionView"
                                   BackgroundColor="Transparent">
                       <CollectionView.ItemTemplate>
                           <DataTemplate>
                               <Frame Padding="15"
                                      Margin="5"
                                      BackgroundColor="Chartreuse"
                                      CornerRadius="10"
                                      HasShadow="True">
                                   <Grid ColumnDefinitions="*,Auto">
                                       <Label Grid.Column="0"
                                              Text="{Binding _Text}"
                                              FontSize="16"
                                              TextColor="Crimson"
                                              VerticalOptions="Center"/>
                                       <Button Grid.Column="1"
                                               Text="XX"
                                               FontSize="16"
                                               BackgroundColor="Red"
                                               TextColor="Aquamarine"
                                               CornerRadius="15"
                                               HeightRequest="30"
                                               WidthRequest="30"
                                               Clicked="BtnDelete_OnClicked"/>
                                   </Grid>
                               </Frame>
                           </DataTemplate>
                       </CollectionView.ItemTemplate>
                       
                   </CollectionView>
                   
                   <!-- empty -->
                   <VerticalStackLayout x:Name="Empty"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        IsVisible="False">
                       <Label Text="????"
                              FontSize="50"
                              TextColor="Aquamarine"
                              HorizontalOptions="Center"
                              Opacity="0.8" />
                       <Label Text="Nothing"
                              FontSize="18"
                              TextColor="Aquamarine"
                              FontAttributes="Bold"
                              HorizontalOptions="Center"
                              Margin="0,10,0,5" />
                       <Label Text="Add Some Ideas"
                              FontSize="14"
                              TextColor="Aquamarine"
                              HorizontalOptions="Center" />
                   </VerticalStackLayout>
               </Grid>
           </Frame>
       </Grid>
    </Grid>
    
